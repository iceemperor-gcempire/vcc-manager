# Server Configuration
NODE_ENV=development
PORT=3000

# Docker Host Port Configuration (for docker-compose.yml)
# These ports will be exposed on your host machine
FRONTEND_PORT=80
BACKEND_PORT=3000
MONGODB_PORT=27017
REDIS_PORT=6379

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/vcc-manager

# Redis Configuration (for job queue)
REDIS_URL=redis://localhost:6379

# Security Configuration
SESSION_SECRET=your_session_secret_key
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=7d
ADMIN_EMAILS=admin@example.com,admin2@example.com

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# File Storage Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Backup Configuration
BACKUP_PATH=./backups
# 64자리 hex 문자열 (32바이트 AES-256 키). openssl rand -hex 32 로 생성 가능
BACKUP_ENCRYPTION_KEY=

# CORS Configuration
FRONTEND_URL=http://localhost:3001

# SMTP Configuration (for password reset emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@vccmanager.com
SMTP_FROM_NAME=VCC Manager

# MCP Server Configuration (optional - MCP server won't start without MCP_EMAIL/MCP_PASSWORD)
MCP_PORT=3100
MCP_API_KEY=
MCP_EMAIL=mcp-agent@your-domain.com
MCP_PASSWORD=your-mcp-password

# Frontend API Configuration (Reference only - distinct .env in frontend/ directory)
# REACT_APP_API_URL=/api