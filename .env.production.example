# Production Environment Configuration

# Server Configuration
NODE_ENV=production
PORT=3000

# Docker Port Configuration
FRONTEND_PORT=80
BACKEND_PORT=3000
# MongoDB/Redis ports should NOT be exposed in production for security
# MONGODB_PORT=27017  # Commented out - internal only
# REDIS_PORT=6379     # Commented out - internal only
HTTP_PORT=80
HTTPS_PORT=443

# Database Configuration (Docker Internal)
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD
MONGO_DB=vcc-manager
MONGODB_URI=mongodb://admin:CHANGE_THIS_TO_SECURE_PASSWORD@mongodb:27017/vcc-manager?authSource=admin

# Redis Configuration (Docker Internal)
REDIS_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD
REDIS_URL=redis://:CHANGE_THIS_TO_SECURE_PASSWORD@redis:6379

# Google OAuth Configuration (Required)
GOOGLE_CLIENT_ID=your_production_google_client_id
GOOGLE_CLIENT_SECRET=your_production_google_client_secret
GOOGLE_CALLBACK_URL=https://yourdomain.com/auth/google/callback

# Session and JWT Configuration
SESSION_SECRET=CHANGE_THIS_TO_SECURE_32_CHAR_SECRET
JWT_SECRET=CHANGE_THIS_TO_SECURE_32_CHAR_SECRET
JWT_EXPIRES_IN=7d

# Admin Configuration
ADMIN_EMAILS=admin@yourdomain.com,admin2@yourdomain.com

# File Upload Configuration
UPLOAD_PATH=/app/uploads
MAX_FILE_SIZE=10485760

# ComfyUI Configuration
COMFY_UI_BASE_URL=http://comfyui-server:8188

# CORS Configuration
FRONTEND_URL=https://yourdomain.com

# Frontend API Configuration
# API URL for frontend to backend communication
# 
# Option 1: Same origin (default) - if frontend and backend are on same domain/port
REACT_APP_API_URL=/api
#
# Option 2: Different ports - if backend is on different port
# REACT_APP_API_URL=http://localhost:3000/api
#
# Option 3: Production domain - for production deployment
# REACT_APP_API_URL=https://your-api-domain.com/api